# Mercury Remote Controller - Environment Configuration
# ===================================================
# Copy this file to .env and modify the values as needed

# Port Configuration
GUACAMOLE_PORT=8080              # Web interface port
NGINX_PORT=80                    # Nginx HTTP port (if enabled)
NGINX_SSL_PORT=443               # Nginx HTTPS port (if enabled)

# Database Configuration
POSTGRES_DB=guacamole_db         # Database name
POSTGRES_USER=guacamole_user     # Database username
POSTGRES_PASSWORD=your_secure_password_here  # CHANGE THIS!
POSTGRES_PORT=5432               # Database port

# Guacamole Configuration
GUACD_PORT=4822                  # Guacamole daemon port
GUACAMOLE_VERSION=1.5.0          # Guacamole version
GUACD_VERSION=1.5.0              # Guacd version

# Network Configuration
NETWORK_NAME=mercury-network      # Docker network name
CONTAINER_PREFIX=mercury          # Container name prefix

# Security Configuration
# CHANGE THESE VALUES FOR PRODUCTION USE!
GUACAMOLE_ADMIN_USER=guacadmin   # Admin username
GUACAMOLE_ADMIN_PASSWORD=guacadmin # Admin password

# Optional: External Access Configuration
# Set to true if you want to allow external access
ALLOW_EXTERNAL_ACCESS=false

# Optional: SSL Configuration
# Set to true if you want to enable SSL/HTTPS
ENABLE_SSL=false

# Optional: Logging Configuration
LOG_LEVEL=INFO                   # Log level (DEBUG, INFO, WARN, ERROR)

# Optional: Performance Configuration
# POSTGRES_SHARED_BUFFERS=256MB
# POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
# POSTGRES_WORK_MEM=4MB
